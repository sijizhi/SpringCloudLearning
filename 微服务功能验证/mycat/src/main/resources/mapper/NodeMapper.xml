<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mycat.mapper.NodeDao">
    <resultMap id="BaseTreeResultMap" type="com.example.mycat.entity.Node">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <collection column="id" property="next" javaType="java.util.ArrayList"
                    ofType="com.example.mycat.entity.Node" select="getNextNodeTree"/>
    </resultMap>

    <resultMap id="NextTreeResultMap" type="com.example.mycat.entity.Node">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <collection column="id" property="next" javaType="java.util.ArrayList"
                    ofType="com.example.mycat.entity.Node" select="getNextNodeTree"/>
    </resultMap>


    <sql id="Base_Column_List">
    id, name
    </sql>


    <select id="getNextNodeTree" resultMap="NextTreeResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM node
        WHERE parent_id = #{id}
    </select>

    <!-- 查全部-->
    <select id="getNodeTree" resultMap="BaseTreeResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM node
        WHERE parent_id = 0
    </select>

    <!-- 0默认查一级分类-->
    <select id="getBaseTree" resultType="node" >
        SELECT
        <include refid="Base_Column_List"/>
        FROM node
        WHERE parent_id = 0
    </select>
    <!--查看下一级-->
    <select id="getChildrenNodeTree" resultType="node">
        SELECT
        <include refid="Base_Column_List"/>
        FROM node
        WHERE parent_id = #{id}
    </select>

</mapper>