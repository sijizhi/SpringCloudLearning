<?xml version="1.0"?>
<!DOCTYPE mycat:schema SYSTEM "schema.dtd">
<mycat:schema xmlns:mycat="http://io.mycat/">


	
	<schema name="TESTDB1" checkSQLschema="true" sqlMaxLimit="100">
		<!-- auto sharding by id (long) -->
		<table name="testdatanode" primaryKey="id"  type="global"  autoIncrement="true" dataNode="dn1"  />

	</schema>
	
	<schema name="TESTDB2" checkSQLschema="true"  sqlMaxLimit="100">
		<!-- auto sharding by id (long) -->
		<table name="testdatanode" primaryKey="id"  type="global" autoIncrement="true"  dataNode="dn2"  />

	</schema>
	<!-- <dataNode name="dn1$0-743" dataHost="localhost1" database="db$0-743"
		/> -->
	<dataNode name="dn1" dataHost="localhost1" database="db1" />
	<dataNode name="dn2" dataHost="localhost1" database="db2" />
	
	
	<dataHost name="localhost1" maxCon="1000" minCon="10" balance="0"
			  writeType="0" dbType="mysql" dbDriver="native" switchType="1"  slaveThreshold="100">
		<heartbeat>select user()</heartbeat>
		<!-- can have multi write hosts -->
		<writeHost host="hostM1" url="39.98.206.180:3306" user="root"
				   password="root">
			<!-- can have multi read hosts -->
			<readHost host="hostS2" url="39.98.206.180:3306" user="root" password="root" />
		</writeHost>
		<writeHost host="hostS1" url="39.98.206.180:3306" user="root"
				   password="root" />
		<!-- <writeHost host="hostM2" url="localhost:3316" user="root" password="123456"/> -->
	</dataHost>


</mycat:schema>